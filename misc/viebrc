" vim: ft=vim
" Match vimium mappings
nnoremap <Left> b
nnoremap <Right> w
nnoremap <A-h> b
nnoremap <A-l> w
nmap v <p.start><p.startVisualSelect>
nmap d <scrollPageDownHalf>
nmap u <scrollPageUpHalf>
nmap o <toExploreMode>
nmap O <:tabnew><toExploreMode>
nmap T <toCommandMode>buffer<Space>
nmap t <:buffer -1><:tabnew><toExploreMode>
nmap <c-t> <:buffer -1><:tabnew><toExploreMode>
nmap g0 <:buffer 0>
nmap g$ <:buffer -1>
nmap J <previousTab>
nmap K <nextTab>
nmap ^ <:buffer #>
nmap ge <toExploreMode><End>
nmap gE <:tabnew><toExploreMode>
nmap x <:close>
nmap X <reopenTab>
nmap yt <openNewTabWithCurrentUrl><CR>
nmap > <moveTabForward>
nmap <lt> <moveTabBackward>
nmap ? <:help>
" nmap [[ <previousPage>
" nmap ]] <nextPage>
" I only ever use d and u
nmap <c-f> <toSearchMode>

nnoremap E <:buffer -1><:tabnew><toExploreMode>
nnoremap <space>a <:buffer #>
" Change windows
nnoremap <c-l> <c-w>l
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

" Create splits
nnoremap <c-w>l <c-w>v
nnoremap <c-w>j <c-w>s

inoremap <c-e> <action.editWithVim>

" Basic settings
colorscheme light

set splitright
set splitbelow
set showcmd
set timeoutlen=1000

" browser-specific settings
set adblocker=update
" set downloadmethod=confirm
set nofollownewtabswitch
set nomousenewtabswitch
set darkreader=false
set guihidetimeout=8000
set pdfbehavior=view
set sponsorblock=true
set taboverflow=wrap
set mintabwidth=80
set tabreopenposition=previous
set windowtitle=%title
set followlabelposition=outsideleftcenter

set vimcommand=neovide

" vim: ft=vim
" Match vimium mappings
nnoremap <Left> b
nnoremap <Right> w
nnoremap <A-h> b
nnoremap <A-l> w
nmap v <p.start><p.startVisualSelect>
nmap d <scrollPageDownHalf>
nmap u <scrollPageUpHalf>
nmap o <toExploreMode>
nmap O <:tabnew><toExploreMode>
nmap T <toCommandMode>buffer<Space>
nmap g0 <:buffer 0>
nmap g$ <:buffer -1>
nmap J <previousTab>
nmap K <nextTab>
nmap ^ <:buffer #>
nmap ge <toExploreMode><End>
nmap gE <:tabnew><toExploreMode>
nmap x <:close>
nmap X <reopenTab>
nmap yt <openNewTabWithCurrentUrl><CR>
nmap <lt><lt> <moveTabBackward>
nmap >> <moveTabForward>
nmap ? <:help>
nmap [[ <previousPage>
nmap ]] <nextPage>

" Change windows
nnoremap <c-l> <c-w>l
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

" Create splits
nnoremap <c-w>l <c-w>v
nnoremap <c-w>j <c-w>s

inoremap <c-e> <action.editWithVim>

" Basic settings
colorscheme light

set splitright
set splitbelow
set showcmd
set timeoutlen=300

" browser-specific settings
set adblocker=update
" set downloadmethod=confirm
set nofollownewtabswitch
set darkreader=false
set guihidetimeout=3000
set pdfbehavior=view
set sponsorblock=true
set taboverflow=wrap
set tabreopenposition=previous
set windowtitle=%title
set followlabelposition=outsideleftcenter

set vimcommand=neovide

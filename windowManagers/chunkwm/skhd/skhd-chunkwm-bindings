# vim:ft=sh

# --------------------
# skhdrc-chunkwm-bindings
# --------------------

# Set up chunkwm with a modal entry, and using the same shortcuts as I
# use for vim, tmux, etc.
# The metaphores are:
# window = tmux pane (but using alt instead of ctrl) (alt + hjkl move),
# mode-shift+arrow to grow, mode-alt+shift+arrow to shrink
# desktop = tmux window (mode-left/right)
# no metaphore for tmux sessions

# create desktop, move window and follow focus
shift + cmd - n : chunkc tiling::desktop --create;\
                  ids=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
                  chunkc tiling::window --send-to-desktop $(echo ${ids##* });\
                  chunkc tiling::desktop --focus $(echo ${ids##* })

# Declare mode
:: chunkwmMode @ :
# cmd - w enters window management mode
alt - w ; chunkwmMode
chunkwmMode < alt - w ; default
chunkwmMode < escape ; default
chunkwmMode < return ; default

# focus window
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# close focused window
alt - x : chunkc tiling::window --close
chunkwmMode < x : chunkc tiling::window --close

# swap window
chunkwmMode < shift - h : chunkc tiling::window --swap west
chunkwmMode < shift - j : chunkc tiling::window --swap south
chunkwmMode < shift - k : chunkc tiling::window --swap north
chunkwmMode < shift - l : chunkc tiling::window --swap east

# move window
chunkwmMode < shift + alt - h : chunkc tiling::window --warp west
chunkwmMode < shift + alt - j : chunkc tiling::window --warp south
chunkwmMode < shift + alt - k : chunkc tiling::window --warp north
chunkwmMode < shift + alt - l : chunkc tiling::window --warp east

# make floating window fill screen
chunkwmMode < z     : chunkc tiling::window --grid-layout 1:1:0:0:1:1

# make floating window fill left-half of screen
chunkwmMode < alt - left   : chunkc tiling::window --grid-layout 1:2:0:0:1:1

# make floating window fill right-half of screen
chunkwmMode < alt - right  : chunkc tiling::window --grid-layout 1:2:1:0:1:1

# increase region size
chunkwmMode < shift - down : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
chunkwmMode < shift - right : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east
chunkwmMode < shift - left : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east
chunkwmMode < shift - up : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south

# decrease region size
chunkwmMode < shift + alt - down : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
chunkwmMode < shift + alt - right : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
chunkwmMode < shift + alt - left : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
chunkwmMode < shift + alt - up : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north

# chunkwmMode < cmd - j : chunkc tiling::window --focus prev
# chunkwmMode < cmd - k : chunkc tiling::window --focus next

# rotate tree
chunkwmMode < r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
chunkwmMode < s : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
chunkwmMode < v : chunkc tiling::desktop --mirror horizontal

# toggle desktop offset XXX
chunkwmMode < o : chunkc tiling::desktop --toggle offset

# toggle window fullscreen
chunkwmMode < cmd - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
chunkwmMode < shift + cmd - f : chunkc tiling::window --toggle native-fullscreen

# toggle window parent zoom
chunkwmMode < alt - z : chunkc tiling::window --toggle parent

# toggle window split type
chunkwmMode < alt - e : chunkc tiling::window --toggle split

# toggle window fade
chunkwmMode < alt - q : chunkc tiling::window --toggle fade

# float / unfloat window and center on screen
chunkwmMode < f : chunkc tiling::window --toggle float;\
          chunkc tiling::window --grid-layout 4:4:1:1:2:2

# toggle sticky
chunkwmMode < p : chunkc tiling::window --toggle sticky

# toggle sticky, float and resize to picture-in-picture size
chunkwmMode < alt - p : chunkc tiling::window --toggle sticky;\
          chunkc tiling::window --grid-layout 5:5:4:0:1:1

# float next window to be tiled
chunkwmMode < shift - f : chunkc set window_float_next 1

# change layout of desktop
chunkwmMode < cmd - b : chunkc tiling::desktop --layout bsp
chunkwmMode < cmd - m : chunkc tiling::desktop --layout monocle
chunkwmMode < cmd - f : chunkc tiling::desktop --layout float

chunkwmMode < cmd - d : chunkc tiling::desktop --deserialize ~/.chunkwm_layouts/dev_1

# set insertion point for focused container
chunkwmMode < ctrl + alt - f : chunkc tiling::window --use-insertion-point cancel
chunkwmMode < ctrl + alt - h : chunkc tiling::window --use-insertion-point west
chunkwmMode < ctrl + alt - j : chunkc tiling::window --use-insertion-point south
chunkwmMode < ctrl + alt - k : chunkc tiling::window --use-insertion-point north
chunkwmMode < ctrl + alt - l : chunkc tiling::window --use-insertion-point east

# send window to desktop
chunkwmMode < shift - x : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
chunkwmMode < shift - z : chunkc tiling::window --send-to-desktop prev
chunkwmMode < shift - c : chunkc tiling::window --send-to-desktop next
chunkwmMode < 1 : chunkc tiling::window --send-to-desktop 1
chunkwmMode < 2 : chunkc tiling::window --send-to-desktop 2
chunkwmMode < 3 : chunkc tiling::window --send-to-desktop 3
chunkwmMode < 4 : chunkc tiling::window --send-to-desktop 4
chunkwmMode < 5 : chunkc tiling::window --send-to-desktop 5
chunkwmMode < 6 : chunkc tiling::window --send-to-desktop 6

# fast focus desktop. Requires extra hack.
chunkwmMode < cmd + alt - x : chunkc tiling::desktop --focus $(chunkc get _last_active_desktop)
chunkwmMode < shift - n : chunkc tiling::desktop --focus next
chunkwmMode < shift - p : chunkc tiling::desktop --focus prev
chunkwmMode < cmd + alt - 1 : chunkc tiling::desktop --focus 1
chunkwmMode < cmd + alt - 2 : chunkc tiling::desktop --focus 2
chunkwmMode < cmd + alt - 3 : chunkc tiling::desktop --focus 3
chunkwmMode < cmd + alt - 4 : chunkc tiling::desktop --focus 4
chunkwmMode < cmd + alt - 5 : chunkc tiling::desktop --focus 5
chunkwmMode < cmd + alt - 6 : chunkc tiling::desktop --focus 6
# cmd + alt - 7 : chunkc tiling::desktop --focus 7

# send window to desktop and follow focus
chunkwmMode < shift + cmd - x : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop); chunkc tiling::desktop --focus $(chunkc get _last_active_desktop)
chunkwmMode < shift + cmd - z : chunkc tiling::window --send-to-desktop prev; chunkc tiling::desktop --focus prev
chunkwmMode < shift + cmd - c : chunkc tiling::window --send-to-desktop next; chunkc tiling::desktop --focus next
chunkwmMode < shift + cmd - 1 : chunkc tiling::window --send-to-desktop 1; chunkc tiling::desktop --focus 1
chunkwmMode < shift + cmd - 2 : chunkc tiling::window --send-to-desktop 2; chunkc tiling::desktop --focus 2
# shift + cmd - 3 : chunkc tiling::window --send-to-desktop 3; chunkc tiling::desktop --focus 3
# shift + cmd - 4 : chunkc tiling::window --send-to-desktop 4; chunkc tiling::desktop --focus 4
# shift + cmd - 4 : chunkc border::clear
chunkwmMode < shift + cmd - 5 : chunkc tiling::window --send-to-desktop 5; chunkc tiling::desktop --focus 5
chunkwmMode < shift + cmd - 6 : chunkc tiling::window --send-to-desktop 6; chunkc tiling::desktop --focus 6
# shift + cmd - 7 : chunkc tiling::window --send-to-desktop 7; chunkc tiling::desktop --focus 7

# focus monitor
chunkwmMode < ctrl + alt - z  : chunkc tiling::monitor -f prev
chunkwmMode < ctrl + alt - c  : chunkc tiling::monitor -f next
chunkwmMode < ctrl + alt - 1  : chunkc tiling::monitor -f 1
chunkwmMode < ctrl + alt - 2  : chunkc tiling::monitor -f 2
chunkwmMode < ctrl + alt - 3  : chunkc tiling::monitor -f 3

# send window to monitor and follow focus
chunkwmMode < ctrl + cmd - z  : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
chunkwmMode < ctrl + cmd - c  : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next
chunkwmMode < ctrl + cmd - 1  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
chunkwmMode < ctrl + cmd - 2  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
chunkwmMode < ctrl + cmd - 3  : chunkc tiling::window --send-to-monitor 3; chunkc tiling::monitor -f 3


# create desktop, move window and follow focus
chunkwmMode < shift + alt + cmd - n : chunkc tiling::desktop --create;\
                  id=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
                  chunkc tiling::window --send-to-desktop $(echo ${id##* });\
                  chunkc tiling::desktop --focus $(echo ${id##* })

# create desktop and follow focus
chunkwmMode < cmd + alt - n : chunkc tiling::desktop --create;\
                id=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
                chunkc tiling::desktop --focus $(echo ${id##* })
# destroy desktop
chunkwmMode < cmd + alt - w : chunkc tiling::desktop --annihilate


# vim: ft=cfg ts=2 sw=2 ai
[alias]
  diff = diff --ignore-space-change
  # For doc files using pandoc?
  wdiff = diff --word-diff=color --unified=1
  unstage = reset HEAD
  reload = checkout --
  # Way nicer and more compact way to view logs. Pass -p to see line differences.
  plog = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  ls = 'branch'
  # for docx (word) files
  wdiff = diff --word-diff=color --unified=1
  rc = rebase --continue
  reab = rebase --abort
  resk = rebase --skip

[credential]
  helper = cache --timeout=3600
[core]
	editor = vim --cmd \"let g:liteMode=1\"
  # autocrlf = input
  autocrlf = false
  safecrlf = true
  eol      = lf

[merge]
  conflictstyle = diff3
  # tool = vimdiff
  # tool = vimdiff4
  tool = fugative
[mergetool]
  prompt = false
  TrustExitCode = true
[mergetool "fugative"]
  cmd = vim -f -c "Gdiff" "$MERGED"
[mergetool "vimdiff4"]
  cmd = vim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
  TrustExitCode = true
# Record resolutions of merges to apply automatically if they occur again.
[rerere]
  enabled = 1
[diff]
  colorMoved = zebra
  # tool = vimdiff2
[difftool]
  TrustExitCode = true
[difftool "vimdiff2"]
  cmd = vim -d $LOCAL $REMOTE
[pull]
  rebase = true
[rebase]
  autoStash = true
# Gives diffs in commit message
[commit]
  verbose = true

# diffs for word files use pandoc
[diff "pandoc"]
  textconv=pandoc --to=markdown
  prompt = false

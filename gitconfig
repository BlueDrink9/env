# vim: ft=cfg
[user]
[credential]
    helper = cache --timeout=3600
[core]
	editor = vim --cmd \"let g:liteMode=1\"
    # autocrlf = input
    autocrlf = false
    safecrlf = true
    eol      = lf

# diffs for word files use pandoc
[diff "pandoc"]
  textconv=pandoc --to=markdown
  prompt = false
[alias]
  diff = diff --ignore-space-change
  wdiff = diff --word-diff=color --unified=1

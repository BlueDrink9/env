
{
    "vscode-neovim.revealCursorScrollLine": true,
    "vscode-neovim.textDecorationsAtTop": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.fontFamily": "'SauceCodePro NF', 'Source Code Pro', Consolas, 'Courier New', monospace",
    "editor.renderWhitespace": "trailing",
    "editor.wordWrap": "on",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.definitionLinkOpensInPeek": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.suggest.insertMode": "replace",
    "files.autoGuessEncoding": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.lineNumbers": "relative",
    "editor.linkedEditing": true,
    "editor.smoothScrolling": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.cursorSurroundingLines": 3,
    "[sql]": {
        "editor.defaultFormatter": "piotrgredowski.poor-mans-t-sql-formatter-pg"
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "scm.diffDecorationsIgnoreTrimWhitespace": "inherit",
    "mssql.enableQueryHistoryCapture": true,
    "Prettier-SQL.keywordCase": "upper",
    "Prettier-SQL.logicalOperatorNewline": "after",
    "Prettier-SQL.commaPosition": "before",
    "Prettier-SQL.linesBetweenQueries": 2,
    "workbench.colorTheme": "Ayu Light Bordered",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.renderCharacters": false,
    "poor-mans-t-sql-formatter.std.breakJoinOnSections": true,
    "poor-mans-t-sql-formatter.std.expandBetweenConditions": false,
    "poor-mans-t-sql-formatter.std.expandInLists": true,
    "poor-mans-t-sql-formatter.std.indent": "4",
    "poor-mans-t-sql-formatter.std.keywordStandardization": true,
    "poor-mans-t-sql-formatter.std.maxLineWidth": 80,
    "poor-mans-t-sql-formatter.std.spaceAfterExpandedComma": true,
    "poor-mans-t-sql-formatter.std.trailingCommas": false,
    "poor-mans-t-sql-formatter-pg.std.trailingCommas": false,
    "poor-mans-t-sql-formatter-pg.std.maxLineWidth": 80,
    "poor-mans-t-sql-formatter-pg.std.indent": "4",
    "poor-mans-t-sql-formatter-pg.std.keywordStandardization": true,
    "poor-mans-t-sql-formatter-pg.std.expandInLists": true,
    "poor-mans-t-sql-formatter-pg.std.breakJoinOnSections": true,
    "poor-mans-t-sql-formatter-pg.std.expandBetweenConditions": false,
    "poor-mans-t-sql-formatter-pg.std.spaceAfterExpandedComma": true,
    "editor.minimap.enabled": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
}

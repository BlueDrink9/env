{
    "workbench.colorTheme": "Default Light Modern",
    "editor.rulers": [
        80,
        120
    ],
    "editor.acceptSuggestionOnEnter": "off",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "never",
    "window.zoomLevel": 1,
    "editor.autoSurround": "never",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSurroundingLines": 3,
    "editor.definitionLinkOpensInPeek": true,
    "editor.fontFamily": "'SauceCodePro NF', 'Source Code Pro', Consolas, 'Courier New', monospace",
    "editor.lineNumbers": "relative",
    "editor.linkedEditing": true,
    "editor.renderWhitespace": "trailing",
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "files.autoGuessEncoding": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableCommitSigning": false,
    "git.enableSmartCommit": true,
    "telemetry.telemetryLevel": "off",
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "window.title": "<ws>/${rootName}/${activeEditorShort} ${dirty}",
    "vscode-neovim.revealCursorScrollLine": true,
    "vscode-neovim.textDecorationsAtTop": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.highlightedyank.enable": true,
    "vim.leader": "<space>",
    "vim.replaceWithRegister": true,
    "vim.showMarksInGutter": true,
    "vim.smartRelativeLine": true,
    "vim.sneak": true,
    "vim.targets.enable": true,
    "vim.vimrc.enable": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "k",
                "v"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "v",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "commands": [
                "vim.showQuickpickCmdLine",
            ],
        },
        {
            "before": [
                ":"
            ],
            "after": [
                ";",
            ],
        },
        {
            "before": [
                "<leader>",
                ";"
            ],
            "commands": [
                "workbench.action.showCommands",
            ],
        },
        {
            "before": [
                "<leader>",
                "<leader>",
            ],
            "commands": [
                "workbench.action.quickOpen",
            ],
        },
        {
            "before": [
                "<leader>",
                ",",
            ],
            "commands": [
                "workbench.action.quickOpen",
            ],
        },
        {
            "before": [
                "<leader>",
                "a",
            ],
            "commands": [
                "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
            ],
        },
        {
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "commands": [
                "editor.action.commentLine",
            ],
        },
        {
            "before": [ "\"",  "\"",],
            "after": [ "\"",  "*",],
        },
        {
            "before": [ "<leader>",  "s", "s"],
            "commands": [ "jupyter.execSelectionInteractive", ],
            "when": "editorLangId == python  && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
        },
        {
            "before": [ "<leader>",  "shift+s"],
            "commands": [ "jupyter.runFileInteractive", ],
            "when": "editorLangId == python  && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
        },
        {
            "before": [ "s" ],
            "commands": [ "leap.find" ]
        },

        {
            "before": [ "right" ],
            "commands": [ "workbench.action.nextEditor" ]
        },
        {
            "before": [ "left" ],
            "commands": [ "workbench.action.previousEditor" ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "commands": [
                "vim.showQuickpickCmdLine",
            ],
        },
        {
            "before": [
                ":"
            ],
            "after": [
                ";",
            ],
        },
        {
            "before": [
                "<leader>",
                ";"
            ],
            "commands": [
                "workbench.action.showCommands",
            ],
        },
        {
            "before": [
                "<leader>",
                "c"
            ],
            "commands": [
                "editor.action.commentLine",
            ],
        },
        {
            "before": [ "<leader>",  "s"],
            "commands": [ "jupyter.execSelectionInteractive", ],
            "when": "editorLangId == python  && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
        },
        {
            "before": [ "s" ],
            "commands": [ "leap.find" ]
        },

    ],
    "editor.minimap.enabled": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "emmet.showSuggestionsAsSnippets": true,
    "editor.suggest.localityBonus": true,
    "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on"
    },
}

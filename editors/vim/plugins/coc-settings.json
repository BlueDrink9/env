{
    // Don't autoselect first completion item.
    "suggest.noselect": true,
    "suggest.echodocSupport": true,
    // "diagnostic.displayByAle": true,
    "diagnostic.virtualText": false,
    "diagnostic.errorSign": "X",
    "diagnostic.warningSign": "!",
    // idk what the differences are here.
    "diagnostic.infoSign": "i",
    "diagnostic.hintSign": "?",
    "codeLens.enable": true,
    // "list.previewHighlightGroup": "Search",
    "coc.preferences.extensionUpdateCheck": "weekly",
    // Maybe.
    "coc.preferences.enableFloatHighlight": false,
    // Priority for signcolumn goes to diagnostics.
    "diagnostic.signOffset": 9999,
    // Use microsoft python lsp instead of Jedi.
    "python.jediEnabled": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd",
    // Faster completion at the cost of goto definition.
    "jedi.jediSettings.autoImportModules": ["numpy", "pandas"],
}
